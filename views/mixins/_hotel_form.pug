mixin hotelForm(hotel={})

  form(action=`` method="POST")
    .form_input
      label(for="hotel_name") Hotel name
      input(type="text" name='hotel_name' value=hotel.hotel_name required)
    .form_input
      label(for="hotel_desc") Hotel description
      textarea( name='hotel_desc' id="hotel_desc" cols='30' rows='10' required)= hotel.hotel_desc
    .form_input
      label(for="image") Hotel image
      input(type="file" name='image' required)
    .form_input
      label(for="star_rating") Star rating
      input(type="range" name='star_rating' required min='1' max='5' value=hotel.star_rating )
      span 
    .form_input
      label(for="country") Country
      input(type="text" id="country" name='country' value=hotel.country required )
    .form_input
      label(for="cost_per_night") Cost Per Night
      input(type="number" name='cost_per_night' value=`${hotel.cost_per_night}` required )
    .form_input
      label(for="available") Available
      input(type="radio" id='available' name='available' value='true' checked)
      label(for="available") Unavailable
      input(type="radio" id='unavailable' name='available' value='false'  )
    .form_input 
      button(type='submit' class='button_small') Confirm